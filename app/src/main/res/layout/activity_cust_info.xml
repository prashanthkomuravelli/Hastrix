<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:id="@+id/svCInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tvCName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name *"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#c62828"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="100dp"
            android:layout_alignParentEnd="true" />
        <EditText
            android:id="@+id/etCName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvCName"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/tvCNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etCName"
            android:layout_marginTop="40dp"
            android:text="Customer Contact *"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#c62828"
            android:textStyle="bold"
            android:layout_alignParentEnd="true" />
        <EditText
            android:id="@+id/etCNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvCNumber"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/tvCEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etCNumber"
            android:layout_marginTop="40dp"
            android:text="Customer Email *"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#c62828"
            android:textStyle="bold"
            android:layout_alignParentEnd="true" />

        <EditText
            android:id="@+id/etCEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvCEmail"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:ems="10"
            android:inputType="textEmailAddress" />
        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:text="ENTER CUSTOMER DETAILS"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/btnCSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etCEmail"
            android:onClick="runGmailIntent"
            android:text="Submit"
            android:background="#000"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            />
    </RelativeLayout>

</ScrollView>